<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 mb-5 inline-block"
          href="/logout"
          >Logout</a
        >
      </div>

      <div class="flex items-start gap-3">
        <div class="w-10 h-10-500 rounded-md">
          <img
            class="w-full h-full"
            src="/images/uploads/<%= user.profilepic%>"
            alt=""
          />
        </div>
        <h3 class="text-3xl">Hello <%= user.username%></h3>
      </div>
      <h5 class="mb-5 mt-3">You can create a post</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="what's on your mind?"
          class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md block"
          name="content"
        ></textarea>
        <input
          class="px-3 py-2 w-40 bg-blue-500 block rounded-md mt-2"
          type="submit"
          value="create new post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <div class="postcontainer">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-1/3 p-4 mt-5 bg-zinc-800 rounded-md border-2 border-zinc-800 mb-4"
          >
            <h4 class="text-blue-500 mb-1"><%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content%></p>
            <small class="mt-2 inline-block"
              ><%= post.likes.length%> likes</small
            >
            <div class="btns mt-1 flex gap-4">
              <a class="text-blue-500" href="/like/<%= post._id%>"
                ><%= post.likes.indexOf(user._id) ? "like" : "unlike" %></a
              >
              <a class="text-zinc-400" href="/edit/<%= post._id%>">edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
